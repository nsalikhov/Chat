@using Chat.Resources
@model Chat.Models.SignInModel

@{
	ViewBag.Title = "Sign In";
}

@using (Html.BeginForm("SignIn", "Authentication", FormMethod.Post, new { @class = "form-horizontal authentication-form" }))
{
	<div class="form-group">
		<label for="login" class="col-sm-2 control-label">@AuthenticationResource.LoginLabelText</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="login" name="Login"/>
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="col-sm-2 control-label">@AuthenticationResource.PasswordLabelText</label>
		<div class="col-sm-10">
			<input type="password" class="form-control" id="password" name="Password"/>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox">
				<label>
					<input type="checkbox" value="true" name="RememberMe"> @AuthenticationResource.RememberMeLabelText
				</label>
				<input type="hidden" value="false" name="RememberMe"/>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-primary">@AuthenticationResource.SignInButtonText</button>
			<a href="@Url.Action("SignUp")" class="btn btn-default">@AuthenticationResource.RegisterLinkText</a>
		</div>
	</div>
}

